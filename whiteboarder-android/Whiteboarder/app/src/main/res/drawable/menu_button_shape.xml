<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- background color -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#357eec" />
        </shape>
    </item>
    <!-- bottom shadow -->
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="-90"
                android:centerColor="#357eec"
                android:centerY="0.9"
                android:endColor="#ff000000"
                android:startColor="#ff357eec"
                android:type="linear" />
        </shape>
    </item>
    <!-- top shadow -->
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:centerColor="#00357eec"
                android:centerY="0.75"
                android:endColor="#ff256eee"
                android:startColor="#ff357eec"
                android:type="linear" />
        </shape>
    </item>
</layer-list>